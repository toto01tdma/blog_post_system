{
  "name": "blog-post-system",
  "version": "1.0.0",
  "description": "A blog post system with Koa.js backend and React frontend",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install",
    "start:backend": "node backend/server.js",
    "start:frontend": "cd frontend && npm start",
    "dev:backend": "nodemon backend/server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run dev:backend\" \"npm run start:frontend\"",
    "start": "npm run dev"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-router": "^12.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}
